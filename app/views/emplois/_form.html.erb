<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <%= form_with(model: emploi, local: true) do |form| %>
    <% if emploi.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(emploi.errors.count, "error") %> prohibited this emploi from being saved:</h2>

        <ul>
        <% emploi.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= form.label :service_id %>
      <%= form.collection_select(:service_id, Service.order(:name), :id, :name,
          {
            include_blank: true
          },
            #onchange: 'getIDDomaine()',
            class: 'form-control col-md-3'
        ) 
      %>
    </div>
    
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class:"form-control col-md-3"%>
    </div>

    <div class="actions">
      <%= form.submit value:"Ajouter un emploi", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>