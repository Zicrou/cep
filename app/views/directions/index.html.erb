<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Directions</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Etablissement</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @directions.each do |direction| %>
        <tr>
          <td><%= direction.name %></td>
          <td><%= direction.etablissement.nom %></td>
          <td><%= link_to 'Show', direction %></td>
          <td><%= link_to 'Edit', edit_direction_path(direction) %></td>
          <td><%= link_to 'Destroy', direction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Direction', new_direction_path %>
</main>