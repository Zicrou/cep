<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <%= form_with(model: index, local: true) do |form| %>
    <% if index.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(index.errors.count, "error") %> prohibited this index from being saved:</h2>

        <ul>
        <% index.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :typeindice_id %>
      <%= form.collection_select(:typeindice_id, Typeindice.all, :id, :name,
          {
            include_blank: true
          },
            onchange: 'getIdregion()',
            class: 'form-control col-md-3'
        ) 
      %>
    </div>

    <div class="form-group">
      <%= form.label :echellon_id %>
      <%= form.collection_select(:echellon_id, Echellon.all, :id, :code,
          {
            include_blank: true
          },
            onchange: 'getIdregion()',
            class: 'form-control col-md-3'
        ) 
      %>
    </div>
    
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class:"form-control col-md-3" %>
    </div>

    <div class="actions">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  <% end %>
</main>