<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Echellons</h1>

  <table>
    <thead>
      <tr>
        <th>Code</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @echellons.each do |echellon| %>
        <tr>
          <td><%= echellon.code %></td>
          <td><%= link_to 'Show', echellon %></td>
          <td><%= link_to 'Edit', edit_echellon_path(echellon) %></td>
          <td><%= link_to 'Destroy', echellon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Echellon', new_echellon_path %>
</main>