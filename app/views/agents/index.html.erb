<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Agents</h1>

  <table>
    <thead>
      <tr>
        <th>Matricule</th>
        <th>Titre</th>
        <th>Marier</th>
        <th>Sexe</th>
        <th>Nom</th>
        <th>Prenom</th>
        <th>Date naissance</th>
        <th>Date pec</th>
        <th>Date recrutement</th>
        <th>Lieu naissance</th>
        <th>Nationalite</th>
        <th>Email</th>
        <th>Telephone</th>
        <th>Region</th>
        <th>Departement</th>
        <th>Adresse</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @agents.each do |agent| %>
        <tr>
          <td><%= agent.matricule %></td>
          <td><%= agent.nom %></td>
          <td><%= agent.prenom %></td>
          <td><%= agent.date_naissance %></td>
          <td><%= agent.date_pec %></td>
          <td><%= agent.date_recrutement %></td>
          <td><%= agent.lieu_naissance %></td>
          <td><%= agent.nationalite %></td>
          <td><%= agent.email %></td>
          <td><%= agent.telephone %></td>
          <td><%= agent.adresse %></td>
          <td><%= link_to 'Show', agent %></td>
          <td><%= link_to 'Edit', edit_agent_path(agent) %></td>
          <td><%= link_to 'Destroy', agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Agent', new_agent_path %>

</main>