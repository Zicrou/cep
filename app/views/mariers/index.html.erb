<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Mariers</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @mariers.each do |marier| %>
        <tr>
          <td><%= marier.name %></td>
          <td><%= link_to 'Show', marier %></td>
          <td><%= link_to 'Edit', edit_marier_path(marier) %></td>
          <td><%= link_to 'Destroy', marier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Marier', new_marier_path %>
</main>