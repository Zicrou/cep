<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
    <p id="notice"><%= notice %></p>

  <h1>Banques</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @banques.each do |banque| %>
        <tr>
          <td><%= banque.name %></td>
          <td><%= banque.code %></td>
          <td><%= link_to 'Show', banque %></td>
          <td><%= link_to 'Edit', edit_banque_path(banque) %></td>
          <td><%= link_to 'Destroy', banque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Banque', new_banque_path %>

</main>