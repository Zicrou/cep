<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Classes</h1>

    <% @classes.each do |classe| %>
      <div class="card text-center">  
        <div class="card-header">
          <span>Indice</span>
        </div>
        <div class="card-body">
          <h2 class="card-title"><%= classe.name%></h2>
          <div class="row">
            <div class="col-md-6">
              <p class="card-text" style=text-align:left; ></p>
              <p class="card-text" style=text-align:left; >Echellon : <%= classe.echellon.code %></p>
            </div>
            <div class="col-md-6">
              <p class="card-text" style=text-align:right; ></p>
            </div>
          </div>
          <!-- a href="#" class="btn btn-primary">Go somewhere</a -->
        </div>
        <div class="card-footer text-muted">
          <span>DTAI-CEP</span>
          <span style=margin:auto;><%= link_to 'Voir', classe %></span>
          <span style=margin:auto;><%= link_to 'Editer', edit_classe_path(classe) %></span>
          <span style=margin:auto;><%= link_to 'Destroy', classe, method: :delete, data: { confirm: 'Are you sure?' } %></span>
          </div>
      </div> 
      
    <br>
    <% end %>
  

  <%= link_to 'New Class', new_class_path %>
</main>