<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <%= link_to 'Ajouter un Service', new_service_path, class:"btn btn-primary" %>
  <br>
  <h1>Les services disponibles:</h1>

  
      <% @services.each do |service| %>
      <div class="card text-center">  
      <div class="card-header">
      <span><%= service.name %></span>
      </div>
      <div class="card-body">
        <h2 class="card-title"><%=%></h2>
        <div class="row">
          <div class="col-md-6">
            <h4 class="card-text" style=text-align:left; >Etablissement : <%= service.etablissement.nom%></h4>
          </div>
          <div class="col-md-6">
          </div>
        </div>
        <!-- a href="#" class="btn btn-primary">Go somewhere</a -->
      </div>
      <div class="card-footer text-muted">
        <span style=>DTAI-CEP</span>
        <span style=margin:auto;><%= link_to 'Show', service %></span>
        <span style=margin:auto;><%= link_to 'Edit', edit_service_path(service) %></span>
        <span style=margin:auto;><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></span>
      </div>
    </div> 
  <br>
      
      <% end %>
  <br>

</main>