<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <%= form_with(model: etablissement, local: true) do |form| %>
    <% if etablissement.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(etablissement.errors.count, "error") %> prohibited this etablissement from being saved:</h2>

        <ul>
        <% etablissement.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :region_id %>
      <%= form.collection_select(:region_id, Region.order(:name), :id, :name,
          {
            include_blank: true
          },
            #onchange: 'getIDDomaine()',
            class: 'form-control col-md-3'
        ) 
      %>
    </div>

    <div class="form-group">
      <%= form.label :typedetablissement_id %>
      <%= form.collection_select(:typedetablissement_id, Typedetablissement.order(:nom), :id, :nom,
          {
            include_blank: true
          },
            #onchange: 'getIDDomaine()',
            class: 'form-control col-md-3'
        ) 
      %>
    </div>


    <div class="form-group">
      <%= form.label :nom %>
      <%= form.text_field :nom , class:"form-control col-md-3"%>
    </div>

    <div class="form-group">
      <%= form.label :code %>
      <%= form.text_field :code, class:"form-control col-md-3" %>
    </div>

    <div class="actions">
      <%= form.submit value:"Ajouter un Etablissement", class:"btn btn-primary" %>
    </div>
  <% end %>
</main>