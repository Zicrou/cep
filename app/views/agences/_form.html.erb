<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <%= form_with(model: agence, local: true) do |form| %>
    <% if agence.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(agence.errors.count, "error") %> prohibited this agence from being saved:</h2>

        <ul>
        <% agence.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :banque_id %>
      <%= form.collection_select(:banque_id, Banque.all, :id, :name,
          {
            include_blank: true
          },
            #onchange: 'getIDDomaine()',
            class: 'form-control col-md-3'
        ) 
      %>
    </div>
    
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class:"form-control col-md-3"%>
    </div>

    <div class="form-group">
      <%= form.label :code_agence %>
      <%= form.text_field :code_agence, class:"form-control col-md-3"%>
    </div>


    <div class="actions">
      <%= form.submit class:"btn btn-primary" %>
    </div>
  <% end %>

</main>