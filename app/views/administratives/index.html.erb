<main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
  <p id="notice"><%= notice %></p>

  <h1>Administratives</h1>

  <table>
    <thead>
      <tr>
        <th>Agent</th>
        <th>Region</th>
        <th>Etablissement</th>
        <th>Direction</th>
        <th>Corps</th>
        <th>Grade</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @administratives.each do |administrative| %>
        <tr>
          <td><%= administrative.agent.matricule + " ( " +administrative.agent.prenom + " " + administrative.agent.nom + " )" %></td>
          <td><%= administrative.region.name %></td>
          <td><%= administrative.etablissement.nom %></td>
          <td><%= administrative.direction.name %></td>
          <td><%= administrative.corp.name %></td>
          <td><%= administrative.grade.code %></td>
          <td><%=  %></td>
          <td><%=  %></td>
          <td><%=  %></td>
          <td><%= link_to 'Show', administrative %></td>
          <td><%= link_to 'Edit', edit_administrative_path(administrative) %></td>
          <td><%= link_to 'Destroy', administrative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Administrative', new_administrative_path %>
</main>